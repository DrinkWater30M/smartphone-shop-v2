<!-- account area start -->
<div class="account-dashboard pt-100px pb-100px">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-3 col-lg-3">
                <!-- Nav tabs -->
                <div class="dashboard_tab_button" data-aos="fade-up" data-aos-delay="0">
                    <ul role="tablist" class="nav flex-column dashboard-list">
                        <li> <a href="#orders" data-bs-toggle="tab" class="nav-link active">Đơn hàng</a></li>
                        <li><a href="#account-details" data-bs-toggle="tab" class="nav-link">Thông tin cá nhân</a>
                        <li><a href="#address" data-bs-toggle="tab" class="nav-link">Địa chỉ</a></li>
                        </li>
                        <li><a href="/user/logout" class="nav-link">Đăng xuất</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-12 col-md-9 col-lg-9">
                <!-- Tab panes -->
                <div class="tab-content dashboard_content" data-aos="fade-up" data-aos-delay="200">
                    <div class="tab-pane fade show active" id="orders">
                        <h4>Đơn hàng</h4>
                        <div class="table_page table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Đơn hàng</th>
                                        <th>Thời gian</th>
                                        <th>Trạng thái</th>
                                        <th>Tổng cộng</th>
                                        <th>Xem chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>May 10, 2018</td>
                                        <td><span class="success">Completed</span></td>
                                        <td>$25.00 for 1 item </td>
                                        <td><a href="/#" class="view">Xem</a></td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>May 10, 2018</td>
                                        <td>Processing</td>
                                        <td>$17.00 for 1 item </td>
                                        <td><a href="/#" class="view">Xem</a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="account-details">
                        <h3>Thông Tin Cá Nhân </h3>
                        <div class="login">
                            <div class="login_form_container">
                                <div class="account_login_form">
                                    {{#with user}}
                                    <form action="#">
                                        <div class="default-form-box mb-20">
                                            <label>Họ tên</label>
                                            <input type="text" name="name" value="{{HoTen}}">
                                        </div>
                                        <div class="default-form-box mb-20">
                                            <label>Email</label>
                                            <input type="text" name="email" value="{{Email}}" disabled>
                                        </div>
                                        <div class="default-form-box mb-20">
                                            <label>Ngày sinh</label>
                                            <input type="date" name="birthday">
                                        </div>
                                        <div class="default-form-box mb-20">
                                            <label>Số điện thoại</label>
                                            <input type="text" name="phone" value="{{SoDienThoai}}">
                                        </div>
                                        <div class="default-form-box mb-20">
                                            <label>Địa chỉ</label>
                                            <input type="text" name="address" value="{{DiaChiGiaoHang}}">
                                        </div>
                                         <div class="default-form-box mb-20">
                                            <label>Đổi Mật khẩu</label>
                                            <input type="text" name="address" placeholder="Mật khẩu cũ">
                                        </div>
                                        <div class="default-form-box mb-20">
                                            <input type="text" name="address" placeholder="Mật khẩu mới">
                                        </div>
                                        <div class="default-form-box mb-20">
                                            <input type="text" name="address" placeholder="Xác nhận mật khẩu">
                                        </div>
                                        <div class="save_button mt-3">
                                            <button class="btn" type="submit">Save</button>
                                        </div>
                                    </form>
                                    {{/with}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="address">
                        <p>Địa chỉ sau đây sẽ được dùng để thanh toán mặc định khi mua hàng!</p>
                        <h5 class="billing-address">Billing address</h5>
                        <a href="#" class="view">Edit</a>
                        <p class="mb-2"><strong>Michael M Hoskins</strong></p>
                        <address>
                            <span class="mb-1 d-inline-block"><strong>City:</strong> Seattle</span>,
                            <br>
                            <span class="mb-1 d-inline-block"><strong>State:</strong> Washington(WA)</span>,
                            <br>
                            <span class="mb-1 d-inline-block"><strong>ZIP:</strong> 98101</span>,
                            <br>
                            <span><strong>Country:</strong> USA</span>
                        </address>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- account area start -->
<!-- Handle for this page -->
<script src="/js/account-handler.js" defer></script>

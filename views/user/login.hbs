<!-- login area start -->
<div class="login-register-area pt-100px pb-100px">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-bs-toggle="tab" href="#lg1">
                            <h4>Đăng nhập</h4>
                        </a>
                        <a data-bs-toggle="tab" href="#lg2">
                            <h4>Đăng kí</h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form method="post" action="/user/login">
                                        <input type="email" name="email" placeholder="Email"/>
                                        <input type="password" name="password" placeholder="Mật khẩu" />
                                        {{#with errorLogin}}<span style="color: red; font-size: 0.9em;">{{message}}</span>{{/with}}
                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <a href="/user/reset-password">Quên mật khẩu?</a>
                                            </div>
                                            <button type="submit"><span>Đăng nhập</span></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div id="lg2" class="tab-pane">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form  id="register" method="post" action="/user/register">
                                        <span id="register-email-error" style="color:red; font-size: 0.9em;"></span>
                                        <input id="register-email" type="email" name="email" placeholder="Email" />

                                         <span id="register-password-error" style="color:red; font-size: 0.9em;"></span><input id="register-password"type="password" name="password" placeholder="Mật khẩu" />

                                         <span id="register-confirm-password-error" style="color:red; font-size: 0.9em;"></span>
                                        <input id="register-confirm-password" type="password" placeholder="Xác nhận mật khẩu" />
                                        {{#with errorRegister}}<span style="color: red; font-size: 0.9em;">{{message}}</span>{{/with}}
                                        <div class="button-box">
                                            <button id="register-submit" type="button"><span>Đăng kí</span></button>
                                        </div>
                                    </form>
                                 </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- login area end -->

{{!-- Handler for client side --}}
<script src="/js/login-validate.js" defer></script>
<!-- Shop Page Start  -->
<div class="shop-category-area pt-100px pb-100px">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 order-lg-last col-md-12 order-md-first">
                <!-- Shop Top Area Start -->
                <div class="shop-top-bar d-flex">
                    <!-- Left Side End -->
                    <div class="shop-tab nav">
                        <button class="active" data-bs-target="#shop-grid" data-bs-toggle="tab">
                            <i class="fa fa-th" aria-hidden="true"></i>
                        </button>
                        <button data-bs-target="#shop-list" data-bs-toggle="tab">
                            <i class="fa fa-list" aria-hidden="true"></i>
                        </button>
                    </div>
                    <div class="col-lg-6 d-lg-block">
                        <div class="search-element">
                            <form action="#">
                                {{#with currentSearch}}
                                <input class="border border-dark search" type="text" placeholder="Tìm kiếm" value="{{currentSearch}}"/> 
                                {{/with}}
                                <button id="search-btn" type="button"><i class="pe-7s-search"></i></button>
                            </form>
                        </div>
                    </div>
                    <!-- Right Side Start -->
                    <div class="select-shoing-wrap d-flex align-items-center">
                        <div class="shot-product">
                            <span style="white-space: nowrap">Sắp xếp: </span>
                        </div>
                        <!-- Single Wedge End -->
                        <div class="header-bottom-set dropdown">
                            <button class="dropdown-toggle header-action-btn" data-bs-toggle="dropdown"><span id="current-type-sort" >Mặc định</span> <i class="fa fa-angle-down"></i></button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a class="dropdown-item filter-sort" href="javascript:{}" value="1">Tên, A - Z</a></li>
                                <li><a class="dropdown-item filter-sort" href="javascript:{}" value="2">Tên, Z - A</a></li>
                                <li><a class="dropdown-item filter-sort" href="javascript:{}" value="3">Giá thấp nhất</a></li>
                                <li><a class="dropdown-item filter-sort" href="javascript:{}" value="4">Giá cao nhất</a></li>
                                <li><a class="dropdown-item filter-sort" href="javascript:{}" value="0">Mặc định</a></li>
                            </ul>
                        </div>
                        <!-- Single Wedge Start -->
                    </div>
                    <!-- Right Side End -->
                </div>
                <!-- Shop Top Area End -->
                <!-- Shop Bottom Area Start -->
                <div class="shop-bottom-area">
                    <!-- Tab Content Area Start -->
                    <div class="row">
                        <div class="col">
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="shop-grid">
                                    <div class="row mb-n-30px">
                                        {{#each productsList}}
                                        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6 mb-30px">
                                            <!-- Single Prodect -->
                                            <div class="product">
                                                <span class="badges">
                                                <span class="new">Mới</span>
                                                </span>
                                                <div class="thumb">
                                                    <a href="/products/detail?id={{MaSanPham}}" class="image">
                                                        <img src={{HinhAnhDaiDien}} alt="Product" />
                                                        <img class="hover-image" src="{{HinhAnhDaiDien}}" alt="Product" />
                                                    </a>
                                                </div>
                                                <div class="content">
                                                    <span class="category"><a>{{ThuongHieu}}</a></span>
                                                    <h5 class="title">
                                                        <a href="/products/detail?id={{MaSanPham}}">{{TenSanPham}}</a>
                                                    </h5>
                                                     <h5 class="title">
                                                        <a href="/products/detail?id={{MaSanPham}}">{{TenLoaiSanPham}}</a>
                                                    </h5>
                                                    <span class="price">
                                                    <span class="new">{{DonGiaNhoNhat}}</span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>

                                <div class="tab-pane fade mb-n-30px" id="shop-list">
                                    {{#each productsList}}
                                    <div class="shop-list-wrapper mb-30px">
                                        <div class="row">
                                            <div class="col-md-5 col-lg-5 col-xl-4 mb-lm-30px">
                                                <div class="product" id={{MaSanPham}}>
                                                    <div class="thumb">
                                                        <a href="/products/detail?id={{MaSanPham}}" class="image">
                                                            <img src={{HinhAnhDaiDien}} alt="Product" />
                                                            <img class="hover-image" src={{HinhAnhDaiDien}} alt="Product" />
                                                        </a>
                                                        <span class="badges">
                                                        <span class="new">Mới</span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-7 col-lg-7 col-xl-8">
                                                <div class="content-desc-wrap">
                                                    <div class="content">
                                                        <span class="category"><a href="#">{{ThuongHieu}}</a></span>
                                                        <h5 class="title"><a href="/products/detail?id={{MaSanPham}}">{{TenSanPham}}</a></h5>
                                                         <h5 class="title"><a href="/products/detail?id={{MaSanPham}}">
                                                         {{TenLoaiSanPham}}</a></h5>
                                                        <p>{{MoTa}}</p>
                                                    </div>
                                                    <div class="box-inner">
                                                        <span class="price">
                                                        <span class="new">{{DonGiaNhoNhat}}</span>
                                                        </span>
                                                        <div class="actions">
                                                            <button title="Add To Cart" class="action add-to-cart" data-bs-toggle="modal" data-bs-target="#exampleModal-Cart"><i
                                                                class="pe-7s-shopbag"></i></button>
                                                            <button class="action wishlist" title="Wishlist" data-bs-toggle="modal" data-bs-target="#exampleModal-Wishlist"><i
                                                                    class="pe-7s-like"></i></button>
                                                            <button class="action quickview" data-link-action="quickview" title="Quick view" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="pe-7s-look"></i></button>
                                                            <button class="action compare" title="Compare" data-bs-toggle="modal" data-bs-target="#exampleModal-Compare"><i
                                                                    class="pe-7s-refresh-2"></i></button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Tab Content Area End -->
                    <!--  Pagination Area Start -->
                    <div class="pro-pagination-style text-center text-lg-end" data-aos="fade-up" data-aos-delay="200">
                        <div class="pages">
                            <ul>
                                <li class="li"><a id="pagination-left" class="page-link" href="#"><i class="fa fa-angle-left"></i></a>
                                </li>

                                <li class="li"> <a class="pagination-item" href="javascript:{}">1</a></li>
                                <li class="li "> <a class="pagination-item" href="javascript:{}">2</a></li>
                                <li class="li"> <a class="pagination-item" href="javascript:{}">3</a></li>
                               
                                <li class="li "><a id="pagination-right" class="page-link" href="#"><i class="fa fa-angle-right"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!--  Pagination Area End -->
                </div>
                <!-- Shop Bottom Area End -->
            </div>

            <!-- Sidebar Area Start -->
            <div class="col-lg-3 order-lg-first col-md-12 order-md-last">
                <div class="shop-sidebar-wrap">
                    <!-- Sidebar single item -->
                    <div class="sidebar-widget">
                        <h4 class="sidebar-title">Thương hiệu</h4>
                        <div class="sidebar-widget-brand">
                            <ul>
                                <li><a href="javascript:{}" class="filter-brand" value="">Tất cả</a></li>
                                {{#each brandsList}}
                                <li>
                                    <a  href="javascript:{}" class="filter-brand" value={{MaThuongHieu}}>{{ThuongHieu}} </a></li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                    <!-- Sidebar single item -->
                    <div class="sidebar-widget mt-8">
                        <h4 class="sidebar-title">Đơn giá</h4>
                        <div class="price-filter">
                            <div class="price-slider-amount">
                                <input type="text" id="amount" class="p-0 h-auto lh-1" name="price" placeholder="Add Your Price" />
                            </div>
                            <div id="slider-range"></div>
                            <button id="filter-prices">Tìm kiếm</button>
                        </div>
                    </div>
                    <!-- Sidebar single item -->
                    <div class="sidebar-widget">
                        <h4 class="sidebar-title">Màu</h4>
                        <div class="sidebar-widget-color">
                            <ul class="d-flex flex-wrap">
                                <li><a href="javascript:{}" class="color-1 filter-color" value="green"></a></li>
                                <li><a href="javascript:{}" class="color-2 filter-color" value="yellow"></a></li>
                                <li><a href="javascript:{}" class="color-3 filter-color" value="red"></a></li>
                                <li><a href="javascript:{}" class="color-4 filter-color" value="pink"></a></li>
                                <li><a href="javascript:{}" class="color-5 filter-color" value="purple"></a></li>
                                <li><a href="javascript:{}" class="color-6 filter-color" value="black"></a></li>
                                <li><a href="javascript:{}" class="color-7 filter-color" value="white"></a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- Sidebar single item -->
                    <div class="sidebar-widget">
                        <h4 class="sidebar-title">Ram</h4>
                        <div class="sidebar-widget-ram">
                            <ul>
                                <li><a href="javascript:{}" class="filter-ram" value=""> All</a></li>
                                <li><a href="javascript:{}" class="filter-ram" value="1"> 1GB </a>
                                </li>
                                <li><a href="javascript:{}" class="filter-ram" value="2"> 2GB </a>
                                </li>
                                <li><a href="javascript:{}" class="filter-ram" value="3"> 3GB </a>
                                </li>
                                <li><a href="javascript:{}" class="filter-ram" value="4"> 4GB </a>
                                </li>
                                <li><a href="javascript:{}" class="filter-ram" value="5"> Trên 4GB </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                        <!-- Sidebar single item -->
                    <div class="sidebar-widget">
                        <h4 class="sidebar-title">Bộ nhớ trong</h4>
                        <div class="sidebar-widget-rom">
                            <ul>
                                <li><a href="javascript:{}" class="filter-rom" value=""> All </a></li>
                                <li><a href="javascript:{}" class="filter-rom" value="16"> 16GB </a>
                                </li>
                                <li><a href="javascript:{}" class="filter-rom" value="32"> 32GB </a>
                                </li>
                                <li><a href="javascript:{}" class="filter-rom" value="64"> 64GB </a>
                                </li>
                                <li><a href="javascript:{}" class="filter-rom" value="128"> 128GB </a>
                                </li>
                                <li><a href="javascript:{}" class="filter-rom" value="129"> Trên 128GB </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- Sidebar single item -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Page End  -->


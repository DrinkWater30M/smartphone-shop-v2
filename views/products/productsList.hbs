 <!-- Filter products here, use form tag -->
<form id="products-filter">
    {{#with currentSearch}}<input type="hidden" name="search" value={{currentSearch}}>{{/with}}

    {{#with currentBrand}}<input type="hidden" name="brand" value={{currentBrand}}>{{/with}}
    {{#with currentColor}}<input type="hidden" name="color" value={{currentColor}}>{{/with}}
    {{#with currentRam}}<input type="hidden" name="ram" value={{currentRam}}>{{/with}}
    {{#with currentRom}}<input type="hidden" name="rom" value={{currentRom}}>{{/with}}
    {{#with currentPage}}<input type="hidden" name="page" value={{currentPage}}>{{/with}}

    {{#with currentPrice}}<input type="hidden" name="min_price" value={{currentMinPrice}}>{{/with}}
    {{#with currentPrice}}<input type="hidden" name="max_price" value={{currentMaxPrice}}>{{/with}}

    {{#with currentSort}}<input type="hidden" name="sort" value={{currentSort}}>{{/with}}

</form>
<!--Filter end -->

<!-- breadcrumb-area start -->

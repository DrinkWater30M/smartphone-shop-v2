                        <h4 style="color: white;">{{TenSanPham}}</h4>
                        <h3 class="title">Dung Lượng Lưu Trữ<br>
                                Cực Lớn({{Rom}}GB)</h3>
                        <span class="category" style="color: white;">Chỉ {{DonGiaNhoNhat}}vnđ</span>
                        <a href="/products/detail/?id={{MaSanPham}}" class="shop-link">Chi tiết <i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
            {{/with}}
            {{#with productMaxBattery}}
            <div class="col-md-6">

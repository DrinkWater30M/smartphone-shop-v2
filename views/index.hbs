<!-- Hero/Intro Slider End -->
<!-- Banner Area Start -->
<div class="banner-area style-two pt-100px pb-100px">
    <div class="container">
        <div class="row">
            {{#each productsRandom}}
            <div class="col-md-6">
                <div class="single-banner nth-child-2 mb-lm-30px">
                    <img style="height:100%;" src="{{HinhAnhDaiDien}}" alt="">
                    <div class="banner-content nth-child-3">
                        <h3 class="title" style="text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">{{ThuongHieu}}</h3>
                        <span class="category" style="text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">Chỉ {{DonGiaNhoNhat}}vnđ</span>
                        <a href="/products/detail/?id={{MaSanPham}}" class="shop-link">Chi tiết <i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Product Area Start -->
<div class="product-area pb-100px">
    <div class="container">
        <!-- Section Title & Tab Start -->
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">Sản Phẩm Cao Cấp</h2>
                </div>
            </div>
        </div>
        <!-- Section Title & Tab End -->
        <div class="row">
            <div class="col">
                <div class="row mb-n-30px">
                    {{#each productsMaxPrice}}
                    <div class="col-lg-4 col-xl-3 col-md-6 col-sm-6 col-xs-6 mb-30px">
                        <!-- Single Prodect -->
                        <div class="product">
                            <span class="badges">
                                <span class="new">Mới</span>
                            </span>
                            <div class="thumb">
                                <a href="/products/detail?id={{MaSanPham}}" class="image">
                                    <img src="{{HinhAnhDaiDien}}" alt="Product" />
                                    <img class="hover-image" src="{{HinhAnhDaiDien}}" alt="Product" />
                                </a>
                            </div>
                            <div class="content">
                                <span class="category"><a href="#">{{ThuongHieu}}</a></span>
                                <h5 class="title">
                                    <a href="/products/detail?id={{MaSanPham}}">
                                        {{TenSanPham}}
                                    </a>
                                </h5>
                                <span class="price">
                                    <span class="new">{{DonGiaNhoNhat}}</span>
                                </span>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product Area End -->
<!-- Banner Area Start -->
<div class="banner-area style-three pb-100px">
    <div class="container">
        <div class="row">

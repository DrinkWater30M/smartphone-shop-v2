                        Chi tiết <i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Feature product area start -->
<div class="feature-product-area pb-100px">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">Giá Siêu Thấp</h2>
                </div>
            </div>
        </div>
        <div class="feature-product-slider swiper-container slider-nav-style-1">
            <div class="swiper-wrapper">
                {{#each productsMinPrice}}
                <div class="swiper-slide feature-right-content">
                    <div class="image-side">
                        <a href="/products/detail?id={{MaSanPham}}">
                            <img src="{{HinhAnhDaiDien}}" alt="">
                        </a>
                    </div>
                    <div class="content-side">
                        <div class="deal-timing">
                            <span>Còn lại: </span>
                            <div data-countdown="2022/03/01"></div>
                        </div>
                        <div class="prize-content">
                            <h5 class="title"><a href="/products/detail?id={{MaSanPham}}">{{TenSanPham}}</a></h5>
                            <span class="price">
                                <span class="new">{{DonGiaNhoNhat}}vnđ</span>
                            </span>
                        </div>
                        <div class="product-feature">
                            <ul>
                                <li>Ram : <span>{{Ram}}GB</span></li>
                                <li>Rom : <span>{{Rom}}GB</span></li>
                                <li>Pin : <span>{{Pin}}mAh.</span></li>
                                <li>Độ phân giải : <span>{{DoPhanGiai}}</span></li>
                                <li>Chip xử lí : <span>{{ChipXuLi}}</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <!-- Add Arrows -->
            <div class="swiper-buttons">
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </div>
    </div>
</div>

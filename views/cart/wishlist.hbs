<!-- Wishlist Area Start -->
<div class="cart-main-area pt-100px pb-100px">
    <div class="container">
        {{#if products}}
        <h3 class="cart-page-title">Giỏ yêu thích</h3>
        {{else}}
        <h3 class="cart-page-title">Giỏ yêu thích(Chưa có sản phẩm nào!)</h3>
        {{/if}}
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <form action="#">
                    <div class="table-content table-responsive cart-table-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>Hình Ảnh</th>
                                    <th>Tên Sản Phẩm</th>
                                    <th>Loại Sản Phẩm</th>
                                    <th>Đơn Giá(vnđ)</th>
                                    <th>Giỏ hàng</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr class="single-product">
                                    <input type="hidden" name="idProduct" value="{{MaSanPham}}">
                                    <input type="hidden" name="idCategory" value="{{LoaiSanPham}}">
                                    <td class="product-thumbnail">
                                        <a href="/products/detail?id={{MaSanPham}}"><img class="img-responsive ml-15px" src={{HinhAnh}} alt="product image" /></a>
                                    </td>
                                    <td class="product-name"><a href="/products/detail?id={{MaSanPham}}">{{TenSanPham}}</a></td>
                                    <td class="product-category">{{TenLoaiSanPham}}</td>
                                    <td class="product-price-cart"><span class="amount">{{DonGia}}</span></td>
                                    <td class="product-wishlist-cart">
                                        <a href="javascript:{}" class="add-to-cart">Thêm</a>
                                    </td>
                                    <td class="product-remove">
                                        <a href="javascript:{}" class="remove"><i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Wishlist Area End -->
{{!-- Handle for wishlist --}}
<script src="/js/wishlist-handler.js" defer></script>
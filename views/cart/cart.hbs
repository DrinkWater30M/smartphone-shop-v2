<!-- Cart Area Start -->
<div class="cart-main-area pt-100px pb-100px">
    <div class="container">
        {{#if products}}
        <h3 class="cart-page-title">Giỏ hàng</h3>
        {{else}}
        <h3 class="cart-page-title">Giỏ hàng(Chưa có sản phẩm nào!)</h3>
        {{/if}}
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <form action="#">
                    <div class="table-content table-responsive cart-table-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>Hình Ảnh</th>
                                    <th>Tên/Loại Sản Phẩm</th>
                                    <th>Đơn Giá</th>
                                    <th>Số Lượng</th>
                                    <th>Thành Tiền</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr class="single-product">
                                    <input type="hidden" name="idProduct" value="{{MaSanPham}}">
                                    <input type="hidden" name="idCategory" value="{{LoaiSanPham}}">
                                    <td class="product-thumbnail">
                                        <a href="/products/detail?id={{MaSanPham}}"><img class="img-responsive ml-15px" src="{{HinhAnh}}" alt="product image" /></a>
                                    </td>
                                    <td class="product-name"><a href="/products/detail?id={{MaSanPham}}">{{TenSanPham}}/{{TenLoaiSanPham}}</a></td>
                                    <td class="product-price-cart"><span class="amount">{{DonGia}}</span></td>
                                    <td class="product-quantity">
                                        <div class="cart-plus-minus">
                                            <input class="cart-plus-minus-box" type="text" name="qtybutton" value="{{SoLuongMua}}" />
                                        </div>
                                    </td>
                                    <td class="product-subtotal">{{ThanhTien}}</td>
                                    <td class="product-remove">
                                        <a href="javascript:{}" class="remove"><i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="cart-shiping-update-wrapper">
                                <div class="cart-shiping-update">
                                    <a href="/products">Tiếp tục mua sắm</a>
                                </div>
                                <div class="cart-clear">
                                    <button type="button"id="remove-all">Xóa giỏ hàng</button>
                                    <a href="javascript:{}" id="check-out">Thanh toán</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Cart Area End -->

{{!-- Handle for cart page --}}
<script src="/js/cart-handler.js" defer></script>